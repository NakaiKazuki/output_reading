<h2 class="log-title col">ユーザー投稿一覧</h2>
<% if @user.posts.any? %>
  <div class="container users-post-container">
    <ol class="posts">
    <% @posts.each do |post|%>
      <li id="post-<%= post.id %>">
        <!-- ここまで進めた -->
        <span class="user"><%= link_to post.user.name, post.user %></span>
        <span class="content"><%= post.content %></span>
        <span class="timestamp">
          <%= time_ago_in_words(post.created_at) %>前
        </span>
      </li>
      <!-- ここから下はおｋ -->
    <% end %>
    </ol>
  </div>
  <%= paginate @microposts %>
<% else %>
    <span>まだ投稿がありません</span>
<% end %>
