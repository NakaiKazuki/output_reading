<div class="container user-book-container">
  <% if @user.books.any? %>
  <ul class="books">
    <% @books.each do |book|%>
    <li id="book-<%= book.id %>">
      <span class="book-title">
        <%= link_to book.title,book %>
      </span>
    </li>
    <% end %>
  </ul>
  <%= paginate @books %>
  <% else %>
    <span class="non-book">まだ投稿がありません</span>
  <% end %>
</div>
