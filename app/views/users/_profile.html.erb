<div class="container user-profile-container">
  <div class="title-container">
    <h1>プロフィール</h1>
  </div>
  <div class="users-info">
    <% if current_user?(@user) %>
    <p class="profile-edit">
      <%= link_to "登録内容を編集する", edit_user_path,class: " btn btn-success " %>
    </p>
    <% else %>
      <%= render 'follow_form' if logged_in? %>
    <% end %>
    <div class="profile">
      <% if @user.image? %>
        <%= image_tag @user.image.url,size:80, class:"user-image"%>
      <% else %>
          <%= image_tag "default.png" ,size:80,class:"user-image-default" %>
      <% end %>
      <span><%= @user.name %></span>
    </div>
    <div>
      <a href="<%= following_user_path(@user)%>" class="btn btn-outline-success user-item-link">
        <strong id="following">
          <%= @user.following.count %>
        </strong>
        フォロー中
      </a>
      <a href="<%= followers_user_path(@user)%>" class="btn btn-outline-success user-item-link">
        <strong id="followers">
          <%= @user.followers.count %>
        </strong>
        フォロワー
      </a>
    </div>
    <div>
      <%= link_to "ユーザー投稿一覧", user_path(@user),class: " btn btn-success user-item-link" %>
      <%= link_to "お気に入り投稿一覧", favorite_books_user_path(@user),class: " btn btn-success user-item-link" %>
    </div>
  </div>
</div>
